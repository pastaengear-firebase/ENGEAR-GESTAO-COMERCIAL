
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // WARNING: Sales and Quotes are publicly readable and writable.
    // This is insecure and not recommended for production.
    match /sales/{saleId} {
      allow read, write: if true;
    }

    match /quotes/{quoteId} {
      allow read, write: if true;
    }

    // WARNING: Settings can be read and written by ANY authenticated user.
    // For production, you should restrict write access to a specific admin UID.
    // e.g., allow write: if request.auth.uid == 'YOUR_ADMIN_UID';
    match /settings/{docId} {
       allow read, write: if request.auth != null;
    }

    // Billing logs can be read by any authenticated user, but only created by the requesting user.
    // They are immutable once created.
    match /billing-logs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.requestedByUid;
      allow update, delete: if false;
    }
  }
}
